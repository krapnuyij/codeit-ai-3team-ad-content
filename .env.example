# nanoCocoa MCP Server 환경 변수 설정 예제
# 이 파일을 .env로 복사하여 사용하세요: cp .env.example .env

# =============================================================================
# AI 서버 연결 설정
# =============================================================================

# nanoCocoa_aiserver의 기본 URL
AISERVER_BASE_URL=http://localhost:8000

# API 요청 타임아웃 (초, 기본: 600 = 10분)
AISERVER_TIMEOUT=600

# 연결 타임아웃 (초, 기본: 10초)
AISERVER_CONNECT_TIMEOUT=10

# =============================================================================
# 폴링 설정
# =============================================================================

# 상태 폴링 간격 (초, 기본: 3.0초)
STATUS_POLL_INTERVAL=3.0

# 최대 폴링 시도 횟수 (기본: 200회, 약 10분)
MAX_POLL_RETRIES=200

# =============================================================================
# 로깅 설정
# =============================================================================

# 로깅 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 로그 파일 경로 (빈 값이면 콘솔만 출력)
LOG_FILE=/tmp/nanococoa_mcpserver.log

# =============================================================================
# 기능 플래그
# =============================================================================

# 중간 결과 캐싱 활성화 여부 (기본: false)
ENABLE_CACHING=false

# 성능 메트릭 수집 활성화 여부 (기본: true)
ENABLE_METRICS=true

# MCP 진행 알림 활성화 여부 (기본: true)
ENABLE_PROGRESS_NOTIFICATIONS=true
